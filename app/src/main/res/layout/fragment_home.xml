<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:background="@drawable/type1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главная"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/city_spinner_main"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/type_chill_spinner_main"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:text="Топ мест"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_for_top_places_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_text"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:text="Топ маршрутов"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_for_top_trips_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/home_start_button"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_for_button"
            android:text="Старт"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>

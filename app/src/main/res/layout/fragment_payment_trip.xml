<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentTripFragment"
    android:orientation="vertical"
    android:background="@drawable/type1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Платные маршруты"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>
    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/city_spinner_payment_trips"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_text"
        android:layout_gravity="center_horizontal"/>

    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/type_chill_spinner_payment_trips"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_text"
        android:layout_gravity="center_horizontal"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_for_payment_trips_in_payment_trips"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:paddingTop="10dp"
        android:background="@drawable/shape_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/button_for_buy_in_payment_trips"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_for_button"
        android:text="Купить"
        android:textColor="@color/black"
        android:textSize="18dp" />



</LinearLayout>
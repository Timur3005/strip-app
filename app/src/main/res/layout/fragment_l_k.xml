<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:background="@drawable/type1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Личный кабинет"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:text="Ваш маршрут"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_for_trip_in_lk"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:paddingTop="10dp"/>
            <Button
                android:id="@+id/start_in_lk"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_for_button"
                android:text="Старт"
                android:textColor="@color/black"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:text="Избранное"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_for_liked_in_lk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_text"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:text="Ваши оплаченные поездки"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_for_payment_trips_in_lk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>